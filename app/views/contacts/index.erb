<div class="contact-list">
  <div class="header">
    <h1>Contacts</h1>
  </div>

  <div id="favorites">
    <span>Favorites</span>
    <% @contacts.each do |contact| %>
      <% if is_favorite(contact) %>
        <a href="/contact/<%= contact["id"] %>">
          <div class="contact">

          </div>
        </a>
      <% end %>
  <% end %>
  </div>

  <div id="other-contacts">
    <span>Other Contacts</span>
    <% @contacts.each do |contact| %>
      <% if other_contact(contact) %>
        <a href="/contact/<%= contact["id"] %>">
          <table>
            <tr>
            <td>
              <div class="image-sm">
                <img src="<%= contact["smallImageURL"] %>">
              </div>
              <div class="image-lg">
                <img src="<%= contact["largeImageURL"] %>">
              </div>
            </td>
            <td>
              <p>
                <%= contact["name"] %>
              </p>
              <p>
                <%= contact["companyName"] %>
              </p>
            </td>
            </tr>
          </table>
          </div>
        </a>
      <% end %>
    <% end %>
  </div>
</div>